---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
import Nextjs from '../components/icons/nextjs';
import React from '../components/icons/react';
import Csharp from '../components/icons/csharp';
import Java from '../components/icons/java';
import Javascript from '../components/icons/javascript';
import Typescript from '../components/icons/typescript';
import Python from '../components/icons/python';
import Php from '../components/icons/php';
import AstroIcon from '../components/icons/astro';
import MaterialUI from '../components/icons/materilui';
import PrimeUI from '../components/icons/primeui';
import Grommet from '../components/icons/grommet';
import Css from '../components/icons/css';
import Html from '../components/icons/html';
import Laravel from '../components/icons/laravel';
import Nestjs from '../components/icons/nestjs';
import Angular from '../components/icons/angular';
import Express from '../components/icons/express';
import Prisma from '../components/icons/prisma';
import Api from '../components/icons/api';
import Keystonejs from '../components/icons/keystonejs';
import Postgres from '../components/icons/postgres';
import Mysql from '../components/icons/mysql';
import Sqlite from '../components/icons/sqlite';
import Sqlserver from '../components/icons/sqlserver';
import Scrum from '../components/icons/scrum';
import Agile from '../components/icons/agile';
import Leadership from '../components/icons/leadership';
import Requirements from '../components/icons/requirements';
import SystemArchitecture from '../components/icons/system-architecture';
import TeamWork from '../components/icons/team-work';
import MultiRole from '../components/icons/multi-role';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const skills = [
	{name: 'Programming Languages', icons: [Csharp, Python, Java, Html, Css, Javascript, Typescript, Php]},
	{name: 'Fronted', icons: [Nextjs, React, Angular, AstroIcon, MaterialUI, PrimeUI, Grommet]},
	{name: 'Backend', icons: [Nestjs, Laravel, Express, Prisma, Api, Keystonejs]},
	{name: 'Databases', icons: [Postgres, Mysql, Sqlite, Sqlserver]},
	{name: 'Project Experiences', icons: [Scrum, Agile, Leadership, Requirements, SystemArchitecture, TeamWork, MultiRole]},
	{name: 'Tools', icons: []},
];
