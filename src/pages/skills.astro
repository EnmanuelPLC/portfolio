			<section class="section with-background bg-variant">
				<div class="flex flex-col gap-10">
					{
						skills.map(({name, icons}) => (
							<div class="flex flex-col gap-3 w-auto mx-auto">
								<h5>{name}</h5>
								<div class="mention-card">
									<div class="flex justify-between items-center w-fulld">
										{
											icons.map((IconP) => (
												<div class="w-16 mx-3" title="oook"><IconP /></div>
											))
										}
									</div>
								</div>
							</div>
						))
					}
				</div>
			</section>
		</main>
		<ContactCTA />
	</div>
	<style>
		.mention-card {
			display: flex;
			height: 7rem;
			justify-content: center;
			align-items: center;
			text-align: center;
			border: 1px solid var(--gray-800);
			border-radius: 1.5rem;
			color: var(--gray-300);
			background: var(--gradient-subtle);
			box-shadow: var(--shadow-sm);
		}

		@media (min-width: 50em) {
			.mention-card {
				border-radius: 1.5rem;
				height: 9.5rem;
			}
		}
	</style>
</BaseLayout>
